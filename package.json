{
  "name": "llm-cli",
  "version": "0.0.1",
  "description": "An LLM-Friendly Command Line Index",
  "main": "src/index.js",
  "bin": {
    "llm-cli": "src/index.js"
  },
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "npm run test:docker:build && docker run llm-cli-test vitest",
    "test:ci": "vitest run --reporter=verbose --coverage --run --testNamePattern='^((?!@skip).)*$'",
    "test:docker:build": "docker build -t llm-cli-test .",
    "test:docker:run": "docker run llm-cli-test npm test",
    "start": "node src/index.js"
  },
  "keywords": [
    "llm",
    "cli",
    "index",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "vitepress": "^1.0.0-rc.45",
    "vitest": "^3.2.4"
  }
}
